<?xml version="1.0" ?>

<Problem>

  <Included>
    <File name="./spe11a_base.xml"/>
  </Included>

  <Mesh>
    <VTKMesh
      name="mesh"
      file="./meshes/spe11a_structured_extruded_600_200.vtu"
      regionAttribute="attribute"
      fieldsToImport="{ PORO }"
      partitionRefinement="3"
      logLevel="5"
      fieldNamesInGEOSX="{ rockPorosity_referencePorosity }">
    <InternalWell
      name="wellInjector1"
      wellRegionName="wellRegion1"
      wellControlsName="wellControls1"
      logLevel="1"
      polylineNodeCoords="{ { .9, 0.01, -0.9 },
                          { .9, 0.01 , -1. } }"
      polylineSegmentConn="{ { 0, 1 } }"
      radius="0.0009"
      minSegmentLength="0.0001"
      numElementsPerSegment="1">
      <Perforation
        name="injector1_perf1"
        distanceFromHead="0.099"/>
    </InternalWell>
    <InternalWell
      name="wellInjector2"
      wellRegionName="wellRegion2"
      wellControlsName="wellControls2"
      logLevel="1"
      polylineNodeCoords="{ { 1.7, 0.01, -0.5},
                            { 1.7, 0.01, -0.6} }"
      polylineSegmentConn="{ { 0, 1 } }"
      radius="0.0009"
      minSegmentLength="0.0001"
      numElementsPerSegment="1">
      <Perforation
        name="injector2_perf1"
        distanceFromHead="0.099"/>
    </InternalWell>
    </VTKMesh>
  </Mesh>
  <Events
          maxTime="432000">

    <PeriodicEvent
            name="outputs"
            timeFrequency="300"
            targetExactTimestep="1"
            target="/Outputs/vtkOutput"/>
    <!-- <PeriodicEvent -->
    <!--   name="restarts" -->
    <!--   timeFrequency="3600" -->
    <!--   targetExactTimestep="1" -->
    <!--   target="/Outputs/restartOutput"/> -->

    <PeriodicEvent
            name="statistics"
            timeFrequency="300"
            target="/Tasks/compflowStatistics"/>

    <PeriodicEvent
            name="solverApplications1"
            beginTime="0"
            endTime="8100"
            target="/Solvers/coupledFlowAndWells"/>
    <PeriodicEvent
            name="solverApplications2"
            beginTime="8100"
            endTime="18000"
            target="/Solvers/coupledFlowAndWells"/>
    <PeriodicEvent
            name="solverApplications3"
            beginTime="18000"
            maxEventDt="30"
            endTime="432000"
            target="/Solvers/coupledFlowAndWells"/>
  </Events>
</Problem>
